<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main app theme (after splash) -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Keep background consistent -->
        <item name="android:windowBackground">#309365</item>
    </style>

    <!-- Launch / Splash theme -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">

        <!-- THIS kills the black frame -->
        <item name="android:windowBackground">#309365</item>

        <!-- Splash background color -->
        <item name="windowSplashScreenBackground">#309365</item>

        <!-- Splash icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Icon background -->
        <item name="windowSplashScreenIconBackgroundColor">#309365</item>

        <!-- Short animation -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Switch to main theme after splash -->
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>

    </style>

</resources>